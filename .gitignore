[build-system]
requires = ["setuptools", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "mindseye-binary-engine"
version = "0.1.0"
description = "A binary-level cognition engine for MindsEye. Decode, label, map, and traverse binary as time-patterns."
authors = [
    { name="Peace Thabiwa", email="your-email@example.com" }
]
readme = "README.md"
requires-python = ">=3.9"
license = { text = "MIT" }

dependencies = [
    "numpy",
    "scipy",
    "scikit-learn"
]

[tool.setuptools.packages.find]
where = ["src"]

